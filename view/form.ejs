<script src=/index.js></script>
<script>
    document.querySelector("#date").valueAsDate = new Date()
    document.querySelector("#type").addEventListener("change", function(){
        if (value === "cat"){
            document.querySelector("#declawed").classList.remove("hidden")
        }
    })
</script>

